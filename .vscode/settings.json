{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".markdownlint.json": true,
    ".markdownlintignore": true,
    ".env": true,
    "CLAUDE.md": true,
    ".vscode": true,
    ".claude": true,
    ".taskmaster": true,
    ".build": true,
    ".swiftpm": true,
    "MagSafeGuard.xcodeproj": true,
    ".githooks": true,
    "sonar-project.properties": true,
    "coverage.lcov": true,
    "*.lcov": true,
    ".coverage": true,
    "coverage": true,
    ".snyk": true,
    ".codecov.yml": true,
    "coverage.xml": true,
    "sbom.spdx": true,
    "sbom-deps.json": true,
    ".swiftlint.yml": true,
    ".scannerwork": true,
    ".sonarcloud": true,
    ".task": true,
    "coverage-report.txt": true,
    ".github/pr-comments": true,
    ".prettierignore": true,
    ".prettierrc.yml": true,
    ".eslintrc.yml": true,
    ".yamllint.yml": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    ".build/**": true,
    ".swiftpm/**": true,
    "MagSafeGuard.xcodeproj/**": true,
    ".github/pr-comments/**": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.associations": {
    "*.mdc": "markdown"
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "lekman",
    "projectKey": "lekman_magsafe-buskill"
  },
  "yaml.schemas": {
    "https://taskfile.dev/schema.json": [
      "tasks/*.yml",
      "tasks/*.yaml",
      "Taskfile.yml",
      "Taskfile.yaml"
    ]
  }
}
