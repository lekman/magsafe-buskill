{
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    ".markdownlint.json": false,
    ".markdownlintignore": false,
    ".env": false,
    "CLAUDE.md": false,
    ".vscode": false,
    ".claude": false,
    ".taskmaster": false,
    ".build": false,
    ".swiftpm": false,
    "MagSafeGuard.xcodeproj": false,
    ".githooks": false,
    "sonar-project.properties": false,
    "coverage.lcov": false,
    "*.lcov": false,
    ".coverage": false,
    "coverage": false,
    ".snyk": false,
    ".codecov.yml": false,
    "coverage.xml": false,
    "sbom.spdx": false,
    "sbom-deps.json": false,
    ".swiftlint.yml": false,
    ".scannerwork": false,
    ".sonarcloud": false,
    ".task": false,
    "coverage-report.txt": false,
    ".github/pr-comments": false,
    ".prettierignore": false,
    ".prettierrc.yml": false,
    ".eslintrc.yml": false,
    ".yamllint.yml": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    ".build/**": true,
    ".swiftpm/**": true,
    "MagSafeGuard.xcodeproj/**": true,
    ".github/pr-comments/**": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.associations": {
    "*.mdc": "markdown"
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "lekman",
    "projectKey": "lekman_magsafe-buskill"
  },
  "yaml.schemas": {
    "https://taskfile.dev/schema.json": [
      "tasks/*.yml",
      "tasks/*.yaml",
      "Taskfile.yml",
      "Taskfile.yaml"
    ]
  }
}
