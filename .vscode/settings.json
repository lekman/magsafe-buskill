{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".markdownlint.json": true,
    ".markdownlintignore": true,
    ".env": true,
    "CLAUDE.md": true,
    ".vscode": true,
    ".claude": true,
    ".taskmaster": true,
    ".build": true,
    ".swiftpm": true,
    "MagSafeGuard.xcodeproj": true,
    ".githooks": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    ".build/**": true,
    ".swiftpm/**": true,
    "MagSafeGuard.xcodeproj/**": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.associations": {
    "*.mdc": "markdown"
  }
}
