{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".vscode": true,
    ".claude": true,
    ".taskmaster": true,
    ".build": true,
    ".swiftpm": true,
    "coverage.lcov": true,
    "*.lcov": true,
    ".coverage": true,
    "coverage": true,
    "sbom-deps.json": true,
    ".scannerwork": true,
    ".sonarcloud": true,
    ".task": true,
    "coverage*.txt": true,
    "build": true,
    "DerivedData": true,
    "LICENSE": true,
    "sbom.spdx": true,
    "sonar-project.properties": true,
    "coverage*.*": true,
    ".*.yml": true,
    ".*.json": true,
    "test_output.log": true,
    ".githooks/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    ".build/**": true,
    ".swiftpm/**": true,
    "MagSafeGuard.xcodeproj/**": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.associations": {
    "*.mdc": "markdown"
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "lekman",
    "projectKey": "lekman_magsafe-buskill"
  },
  "postman.settings.dotenv-detection-notification-visibility": false
}
